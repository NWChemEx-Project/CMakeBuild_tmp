# - Try to find Antlr CppRuntime Library
#  Once done this will define
#  ANTLRCPPRUNTIME_FOUND_FOUND - System has Antlr CppRuntime
#  ANTLRCPPRUNTIME_FOUND_INCLUDE_DIRS - The Antlr CppRuntime include directories
#  ANTLRCPPRUNTIME_FOUND_LIBRARIES - The libraries needed to use Antlr CppRuntime

find_package(PkgConfig)
pkg_check_modules(PC_ANTLRCPPRUNTIME_FOUND QUIET libantlr4-runtime)

find_path(ANTLRCPPRUNTIME_FOUND_INCLUDE_DIR antlr4-runtime.h
          HINTS ${PC_ANTLRCPPRUNTIME_FOUND_INCLUDEDIR} ${PC_ANTLRCPPRUNTIME_FOUND_INCLUDE_DIRS} 
          PATH_SUFFIXES antlr4-runtime)

find_library(ANTLRCPPRUNTIME_FOUND_LIBRARY NAMES libantlr4-runtime${CMAKE_STATIC_LIBRARY_SUFFIX}
             HINTS ${PC_ANTLRCPPRUNTIME_FOUND_LIBDIR} ${PC_ANTLRCPPRUNTIME_FOUND_LIBRARY_DIRS})

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(ANTLRCPPRUNTIME DEFAULT_MSG
                                  ANTLRCPPRUNTIME_FOUND_LIBRARY ANTLRCPPRUNTIME_FOUND_INCLUDE_DIR)

mark_as_advanced(ANTLRCPPRUNTIME_FOUND_INCLUDE_DIR ANTLRCPPRUNTIME_FOUND_LIBRARY)

set(ANTLRCPPRUNTIME_FOUND_LIBRARIES ${ANTLRCPPRUNTIME_FOUND_LIBRARY})
set(ANTLRCPPRUNTIME_FOUND_INCLUDE_DIRS ${ANTLRCPPRUNTIME_FOUND_INCLUDE_DIR})
